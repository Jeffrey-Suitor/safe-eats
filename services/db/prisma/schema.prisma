generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

enum ApplianceType {
  Toaster_Oven
}

enum TemperatureUnit {
  C
  F
}

enum ApplianceMode {
  Bake
  Broil
  Convection
  Rotisserie
}

enum Role {
  SUPERADMIN
  ADMIN
  USER
}

model Recipe {
  id              String          @id @default(uuid())
  name            String
  description     String
  cookingTime     Int
  expiryDate      Int
  applianceType   ApplianceType
  temperature     Int
  temperatureUnit TemperatureUnit
  applianceMode   ApplianceMode
  qrCodes         QRCode[]
  appliance       Appliance[]
  user            UserToRecipe[]
}

model QRCode {
  id        String   @id @default(uuid())
  recipe    Recipe   @relation(references: [id], fields: [recipeId], onDelete: Cascade)
  recipeId  String
  createdAt DateTime @default(now())
}

model Appliance {
  id               String            @id
  name             String
  type             ApplianceType
  updatedAt        DateTime          @updatedAt
  temperatureC     Int
  temperatureF     Int
  cookingStartTime DateTime
  recipe           Recipe?           @relation(fields: [recipeId], references: [id], onDelete: SetNull)
  recipeId         String?
  users            UserToAppliance[]
}

model User {
  id                    String            @id @default(uuid())
  name                  String
  email                 String            @unique @db.VarChar(255)
  role                  Role              @default(USER)
  appliances            UserToAppliance[]
  recipes               UserToRecipe[]
  pushNotificationToken String?
}

model UserToAppliance {
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  appliance   Appliance @relation(fields: [applianceId], references: [id])
  applianceId String

  @@id([userId, applianceId])
}

model UserToRecipe {
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId String

  @@id([userId, recipeId])
}
